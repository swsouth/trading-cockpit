# Supabase Configuration

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service Role Key (REQUIRED for scripts that populate database)
# WARNING: Keep this secret! Never commit to git or expose in client-side code
# Get this from: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Scanner Secret Key (REQUIRED for automated scans via /api/scan/trigger)
# WARNING: Keep this secret! Used by GitHub Actions or external cron jobs
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SCAN_SECRET_KEY=your_scan_secret_key_here

# Market Data APIs (Optional - for future use)
# ALPACA_API_KEY=your_alpaca_api_key
# ALPACA_API_SECRET=your_alpaca_api_secret
# FINNHUB_API_KEY=your_finnhub_api_key